<web-app xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
    version="3.0">
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
  	<servlet-name>AddProductDetailsServlet</servlet-name>
  	<!-- <display-name>AddProductDetailsServlet</display-name>
  	<description></description> -->
  	<servlet-class>com.servlets.AddProductDetailsServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>DisplayProductDetailsServlet</servlet-name>
  	<!-- <display-name>DisplayProductDetailsServlet</display-name>
  	<description></description> -->
  	<servlet-class>com.servlets.DisplayProductDetailsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>AddProductDetailsServlet</servlet-name>
  	<url-pattern>/add</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>DisplayProductDetailsServlet</servlet-name>
  	<url-pattern>/display</url-pattern>
  </servlet-mapping>
</web-app>